
<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Запчасти для сотовых телефонов" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Amatradk" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller.controller_name %>">
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
           <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div id="main" role="main">
      <div class="container-fluid">
        <div class="content">
           <div class="row-fluid">
            <div class="span2">
              <%= render 'layouts/categories' %>
            </div>
            <div class="span6">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
            <div class="span4">
              <%= render 'layouts/cartmain' %>
            </div>
          </div>
          <footer>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>
